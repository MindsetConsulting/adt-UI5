<mvc:View controllerName="mindset.adt.ui5.adtui5.controller.SkillList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic" id="SkillList">

    <semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false">

        <semantic:titleHeading>
            <Title id="pageTitle" text="{i18n>skillListTitle}" level="H2"/>
        </semantic:titleHeading>

        <semantic:content>
            <Table id="tableSkills" mode="None" items="{path: '/Skills'}">

                <headerToolbar>
                    <OverflowToolbar id="tableHeaderToolbar">
                        <Title id="tableHeader" level="H3"/>
                        <ToolbarSpacer id="tableHeaderSpacer" />

                        <Button icon="sap-icon://add" text="Add Skill" press=".onAddSkillPress" />
                        <Button type="Emphasized" icon="sap-icon://activity-items" text="Employee List" press=".onEmployeeListNav" />
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="{i18n>skillName}" />
                    </Column>
                    <Column>
                        <Text text="" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Inactive">
                        <!-- <cells>
                            <Text text="{skillName}" />
                            <HBox justifyContent="End">
                                <Button icon="sap-icon://edit" press=".onEditSkillPress" />
                                <ToolbarSpacer width="1rem" />
                                <Button icon="sap-icon://delete" press=".onDeleteSkillPress" />
                            </HBox>
                        </cells> -->
                        <cells>
                            <VBox>
                                <Text text="{skillName}" visible="{= !${editMode}}" />
                                <Input value="{skillName}" visible="{= ${editMode}}" editable="{= ${editMode}}" />
                                <HBox visible="{= ${editMode}}">
                                    <Button type="Emphasized" text="Save" icon="sap-icon://save" press=".onSaveSkillPress" />
                                </HBox>
                                <HBox visible="{= !${editMode}}">
                                    <Button icon="sap-icon://edit" press=".onEditSkill" />
                                    <Button icon="sap-icon://delete" press=".onDeleteSkill" />
                                </HBox>
                            </VBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>

    </semantic:SemanticPage>

</mvc:View>

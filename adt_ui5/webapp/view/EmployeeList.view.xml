<mvc:View controllerName="mindset.adt.ui5.adtui5.controller.EmployeeList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic" id="EmployeeList">

    <semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false">

        <semantic:titleHeading>
            <Title id="_IDGenTitle1" text="{i18n>employeeListTitle}" level="H2"/>
        </semantic:titleHeading>

        <semantic:content>
            <Table 
                id="table" width="auto" mode="MultiSelect" items="{
                    path: '/Employee',
                    sorter: {
                        path: 'Id',
                        descending: false
                    }
                }" 
                selectionChange=".onSelectionChange"
                delete=".onDelete">

                <headerToolbar>
                    <OverflowToolbar id="_IDGenOverflowToolbar1">
                        <Title id="tableHeader" text="Employee Table" level="H3"/>
                        <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                        
                        <!-- Add Employee Button -->
                        <Button id="_IDGenButtonAddEmployee" icon="sap-icon://add" text="Add Employee" press=".onAddEmployeePress" />

                        <!-- Delete Employee Button -->
                        <Button id="_IDGenButtonDeleteEmployee" icon="sap-icon://delete" text="Delete Selected" press=".onDeleteEmployeePress" enabled="{= ${viewModel>/selectedItemsCount} > 0}"/>

                        <!-- Skills List Button -->
                        <Button id="_IDGenButtonSkillsList" icon="sap-icon://activity-items" text="Skills List" type="Emphasized" press=".onSkillsListPress" />
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="_IDGenColumn1">
                        <Text id="_IDGenText2" text="Name" />
                    </Column>
                    <Column id="_IDGenColumn2">
                        <Text id="_IDGenText3" text="Department" />
                    </Column>
                    <Column id="_IDGenColumn3">
                        <Text id="_IDGenText4" text="Start Date" />
                    </Column>
                    <Column id="_IDGenColumn4">
                        <Text id="_IDGenText5" text="Role" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem id="_IDGenColumnListItem1" type="Navigation" press=".onPress">
                        <cells>
                            <Text id="_IDGenText6" text="{Name}" />
                            <Text id="_IDGenText7" text="{Department}" />
                            <Text id="_IDGenText8" text="{StartDate}" />
                            <Text id="_IDGenText9" text="{Role}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content>

    </semantic:SemanticPage>

</mvc:View>
